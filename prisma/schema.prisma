generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  userId    Int
  createdAt DateTime @default(now())
  postId    Int
  Post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  User      User     @relation(fields: [userId], references: [id])

  // Add an index to userId for faster queries filtering by user
  @@index([userId])
}

model Post {
  id       Int       @id @default(autoincrement())
  postedAt DateTime  @default(now())
  title    String    @db.VarChar(40)
  content  String
  userId   Int
  tag      String
  Comment  Comment[]
  User     User      @relation(fields: [userId], references: [id])

  // Add an index to userId for faster queries filtering by user
  @@index([userId])
}

model User {
  id          Int       @id @default(autoincrement())
  uid         String    @unique
  firstName   String
  course      String
  lastName    String
  collegeYear String
  email       String    @unique
  Comment     Comment[]
  Post        Post[]

  // Add an index to email for faster lookups
  @@index([email])
  // Add an index to uid for faster lookups (especially useful for authentication)
  @@index([uid])
}
